{
  "name": "nvm-gui",
  "version": "0.0.1",
  "description": "This project is to create a minimalistic GUI wrapper for NVM. It is built using Angular and Electron. It requires nvm to be installed on the system.",
  "main": "electron-main.js",
  "author": "Thomas Osipiak",
  "scripts": {
    "electron": "electron . --serve",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist:setup32": "electron-builder -w --ia32",
    "dist:setup64": "electron-builder -w --x64",
    "ng": "ng",
    "build": "ng build --configuration production",
    "watch:dev": "ng build --watch --configuration development"
  },
  "build": {
    "appId": "NVM GUI",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "productName": "NVM GUI",
    "copyright": "Copyright Â© 2024 ${author}",
    "win": {
      "requestedExecutionLevel": "requireAdministrator"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.0",
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "^17.1.0",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@angular/router": "^17.1.0",
    "electron-reload": "^2.0.0-alpha.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.2",
    "@angular/cli": "^17.1.2",
    "@angular/compiler-cli": "^17.1.0",
    "@types/jasmine": "~5.1.0",
    "electron": "^29.0.1",
    "electron-builder": "^24.12.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.2.5",
    "typescript": "~5.3.2"
  }
}
